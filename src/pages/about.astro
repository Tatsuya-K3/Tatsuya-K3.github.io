---
import BaseLayout from "../layouts/BaseLayout.astro";
import { getCollection, getEntry } from "astro:content";
import { getProfile, getStats, getSkills, getCertifications, getWhatIDo, LINKS } from "../lib/constants";

const profile = getProfile();
const stats = getStats();
const skillsFromYaml = getSkills();
const certificationsFromYaml = getCertifications();
const whatIDo = getWhatIDo();

// Load about page content from pages collection
const aboutPage = await getEntry("pages", "about");
const { Content } = aboutPage ? await aboutPage.render() : { Content: null };

// Get section titles with defaults
const sectionTitles = {
  whatIDo: aboutPage?.data.sectionTitles?.whatIDo ?? "What I Do",
  skills: aboutPage?.data.sectionTitles?.skills ?? "Skills",
  experience: aboutPage?.data.sectionTitles?.experience ?? "Experience",
  certifications: aboutPage?.data.sectionTitles?.certifications ?? "Certifications",
  contact: aboutPage?.data.sectionTitles?.contact ?? "Let's Connect",
};

// Contact message
const contactMessage = aboutPage?.data.contactMessage ?? "I'm always open to new opportunities and collaborations. Feel free to reach out!";

// Load experiences from content collection
const experienceEntries = await getCollection("experience");
const experiences = experienceEntries
  .sort((a, b) => a.id.localeCompare(b.id))
  .map((entry) => ({
    ...entry.data,
    highlight: entry.data.current,
  }));

// Icon SVG paths mapping
const iconPaths: Record<string, string> = {
  code: "M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4",
  cloud: "M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10",
  team: "M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z",
  learning: "M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z",
};

// Color class mapping
const colorClasses: Record<string, { bg: string; text: string }> = {
  accent: { bg: "bg-accent-500/10", text: "text-accent-500" },
  cyan: { bg: "bg-hybrid-cyan/10", text: "text-hybrid-brightCyan" },
  green: { bg: "bg-hybrid-green/10", text: "text-hybrid-brightGreen" },
  magenta: { bg: "bg-hybrid-magenta/10", text: "text-hybrid-brightMagenta" },
};
---

<BaseLayout
  title={`About - ${profile.name}`}
  description={`About ${profile.name} - ${profile.jobTitle}`}
>
  <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 py-16 md:py-24">
    <!-- Hero Section -->
    <div class="mb-16">
      <div class="flex flex-col md:flex-row md:items-center gap-8 mb-8">
        <div class="flex-1">
          <p class="text-accent-500 font-medium mb-2">Hello, I'm</p>
          <h1 class="font-display text-4xl md:text-5xl font-bold mb-4">{profile.name}</h1>
          <p class="text-xl text-light-muted dark:text-dark-muted mb-4">
            {profile.jobTitle}
          </p>
          <p class="text-light-muted dark:text-dark-muted max-w-2xl">
            {profile.bio}
          </p>
        </div>
      </div>

      <!-- Quick Facts -->
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
        {stats.map((stat) => (
          <div class="p-4 rounded-lg border border-light-border dark:border-dark-border text-center">
            <div class="text-2xl md:text-3xl font-bold text-accent-500 mb-1">{stat.value}</div>
            <div class="text-sm text-light-muted dark:text-dark-muted">{stat.label}</div>
          </div>
        ))}
      </div>
    </div>

    <!-- Custom Content from Markdown -->
    {Content && (
      <section class="mb-16 prose prose-lg dark:prose-invert max-w-none">
        <Content />
      </section>
    )}

    <!-- What I Do -->
    <section class="mb-16">
      <h2 class="font-display text-2xl font-bold mb-6">{sectionTitles.whatIDo}</h2>
      <div class="grid gap-6 md:grid-cols-2">
        {whatIDo.map((item) => (
          <div class="p-6 rounded-lg border border-light-border dark:border-dark-border">
            <div class="flex items-center gap-3 mb-3">
              <div class={`p-2 rounded-lg ${colorClasses[item.color].bg}`}>
                <svg class={`w-5 h-5 ${colorClasses[item.color].text}`} fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={iconPaths[item.icon]} />
                </svg>
              </div>
              <h3 class="font-display font-semibold">{item.title}</h3>
            </div>
            <p class="text-sm text-light-muted dark:text-dark-muted">
              {item.description}
            </p>
          </div>
        ))}
      </div>
    </section>

    <!-- Skills -->
    <section class="mb-16">
      <h2 class="font-display text-2xl font-bold mb-8">{sectionTitles.skills}</h2>
      <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
        {skillsFromYaml.map((skill) => (
          <div class="p-5 rounded-lg border border-light-border dark:border-dark-border hover:border-accent-500/50 transition-colors">
            <h3 class="font-display font-semibold mb-3 text-accent-500">
              {skill.category}
            </h3>
            <div class="flex flex-wrap gap-2">
              {skill.items.map((item) => (
                <span class="px-2 py-1 text-xs bg-light-border/50 dark:bg-dark-border/50 rounded">
                  {item}
                </span>
              ))}
            </div>
          </div>
        ))}
      </div>
    </section>

    <!-- Experience Timeline -->
    <section class="mb-16">
      <h2 class="font-display text-2xl font-bold mb-8">{sectionTitles.experience}</h2>

      <!-- Current Roles -->
      {experiences.filter(e => e.current).length > 0 && (
        <div class="mb-8">
          <h3 class="text-sm font-medium text-accent-500 uppercase tracking-wider mb-4">Current</h3>
          <div class="grid gap-4 md:grid-cols-2">
            {experiences.filter(e => e.current).map((exp) => (
              <div class="p-5 rounded-lg border-2 border-accent-500/30 bg-accent-500/5">
                <div class="text-xs text-light-muted dark:text-dark-muted mb-2">{exp.period}</div>
                <h4 class="font-display font-semibold mb-1">{exp.company}</h4>
                <p class="text-sm text-accent-500 mb-2">{exp.role}</p>
                {exp.type && <p class="text-xs text-light-muted dark:text-dark-muted mb-2">{exp.type}</p>}
                {exp.highlights && exp.highlights.length > 0 && (
                  <p class="text-sm text-light-muted dark:text-dark-muted">{exp.highlights[0]}</p>
                )}
              </div>
            ))}
          </div>
        </div>
      )}

      <!-- Past Experience -->
      {experiences.filter(e => !e.current).length > 0 && (
        <div>
          <h3 class="text-sm font-medium text-light-muted dark:text-dark-muted uppercase tracking-wider mb-4">Previous</h3>
          <div class="space-y-4">
            {experiences.filter(e => !e.current).map((exp) => (
              <div class="p-5 rounded-lg border border-light-border dark:border-dark-border">
                <div class="flex flex-wrap items-baseline justify-between gap-2 mb-2">
                  <div>
                    <h4 class="font-display font-semibold">{exp.company}</h4>
                    <p class="text-sm text-accent-500">{exp.role}</p>
                  </div>
                  <span class="text-sm text-light-muted dark:text-dark-muted">{exp.period}</span>
                </div>
                {exp.highlights && exp.highlights.length > 0 && (
                  <p class="text-sm text-light-muted dark:text-dark-muted mb-2">{exp.highlights[0]}</p>
                )}
                {exp.achievements && (
                  <div class="flex flex-wrap gap-2">
                    {exp.achievements.map((achievement) => (
                      <span class="inline-flex items-center gap-1 px-2 py-0.5 text-xs bg-hybrid-green/10 text-hybrid-brightGreen rounded">
                        <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                        </svg>
                        {achievement}
                      </span>
                    ))}
                  </div>
                )}
              </div>
            ))}
          </div>
        </div>
      )}
    </section>

    <!-- Certifications -->
    {certificationsFromYaml.length > 0 && (
      <section class="mb-16">
        <h2 class="font-display text-2xl font-bold mb-6">{sectionTitles.certifications}</h2>
        <div class="grid gap-3">
          {certificationsFromYaml.map((cert) => (
            <div class="flex items-center gap-3 p-4 rounded-lg border border-light-border dark:border-dark-border">
              <svg class="w-5 h-5 text-hybrid-brightYellow flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
              </svg>
              <div>
                <span class="text-sm font-medium">{cert.name}</span>
                <span class="text-sm text-light-muted dark:text-dark-muted"> - {cert.issuer}</span>
              </div>
            </div>
          ))}
        </div>
      </section>
    )}

    <!-- Contact CTA -->
    <section class="p-8 rounded-xl bg-gradient-to-r from-accent-500/10 via-hybrid-cyan/10 to-hybrid-magenta/10 border border-light-border dark:border-dark-border text-center">
      <h2 class="font-display text-2xl font-bold mb-4">{sectionTitles.contact}</h2>
      <p class="text-light-muted dark:text-dark-muted mb-6 max-w-xl mx-auto">
        {contactMessage}
      </p>
      <div class="flex flex-wrap justify-center gap-4">
        {LINKS.github && (
          <a
            href={LINKS.github}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center gap-2 px-6 py-3 border border-light-border dark:border-dark-border hover:border-accent-500 dark:hover:border-accent-500 font-medium rounded-lg transition-colors"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" />
            </svg>
            GitHub
          </a>
        )}
        {LINKS.linkedin && (
          <a
            href={LINKS.linkedin}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center gap-2 px-6 py-3 border border-light-border dark:border-dark-border hover:border-accent-500 dark:hover:border-accent-500 font-medium rounded-lg transition-colors"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z" />
            </svg>
            LinkedIn
          </a>
        )}
        {LINKS.email && (
          <a
            href={`mailto:${LINKS.email}`}
            class="inline-flex items-center gap-2 px-6 py-3 bg-accent-500 text-white hover:bg-accent-600 font-medium rounded-lg transition-colors"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
            Contact Me
          </a>
        )}
      </div>
    </section>
  </div>
</BaseLayout>
